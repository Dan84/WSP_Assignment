<h1>Create</h1>
<p>Find me in app/views/exercise_classes/create.html.erb</p>
<% provide(:title, 'Exercise Class Entry') %>


<div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for(@exercise_class = ExerciseClass.new) do |f| %>
       
          <%= f.label :name %>
          <%= f.text_field :name %>

          <%= f.label :day %>
          <%= f.text_field :day %>

          <%= f.label :duration %>
          <%= f.duration :duration %>

          <%= f.text_field current_user.user_id %>


          <%= f.submit "Add Class", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
