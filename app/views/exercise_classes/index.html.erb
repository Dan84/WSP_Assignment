

<h1>All Classes</h1>
	<div class="row">
 		<div class="col-md-8 col-xs-push-2">
 					<h2>Upcoming</h2>
					<%= render 'shared/class_list', object: @classes_upcoming%>
					<%= will_paginate @classes_upcoming, :param_name => "upcoming" %>

					<h2>Past</h2>
					<%= render 'shared/class_list', object: @classes_past %>
					<%= will_paginate @classes_past, :param_name => "past" %>

					 <div class="col-md-3 col-md-push-9">
						 <% if current_user.trainer? %>
						 <%= button_to "New Class", new_exercise_class_path, method: :get, class: "btn btn-primary" %>
						 <%end%>
					</div>
 		</div>
 	</div>
  
