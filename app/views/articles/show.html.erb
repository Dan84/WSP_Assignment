<% provide(:title, @article.title) %>
    <div class="row">
      
        <section class="user_info">
          <h1> <%= @article.title%> </h1>
            
           
            <%= simple_format(@article.content) %>
           
            <%= @article.user.name %>
          
        </section>
        <%if @article.commentable? %>
        	<%= render 'shared/comment_form' %>

        	 <div class="col-md-8">
          <h3>Comments</h3>
          <%= render 'shared/discussion' %>
        </div>
        <%end%>

        	
       


       
    </div>



        