<% provide(:title, 'Article Entry') %>
<h1>Create Article</h1>

<div class="row">
   <div class="col-md-10 col-md-push-1">
      

                <%= form_for @article do |f| %>
                <%= render 'shared/error_messages', object: f.object %>
                  <%= f.label :title %>
                
                  <%= f.text_field :title %>
                
                  <%= f.label :content %>
                
                  <%= f.cktext_area :content, rows: 10 %>
                
                  <%= f.label :commentable, 'Allow comments'.html_safe  , {class: "checkbox:inline"} %>
                  <%= f.check_box (:commentable)%>
                  
                
                   <%= f.submit "Publish Article", class: "btn btn-primary" %>
               
              <% end %>
          




          


         
        
      </div>
    </div>