<h1>Articles</h1>
<div class="row">
<ul class="articles">
  <% @articles.each do |article| %>
    <li>
      
      <%= link_to article.title, article %>
      <p><%= sanitize(truncate(article.content, length: 100,  escape: false))%></p>
      <%= article.user.name%>
      <% if current_user.trainer? %>
      <%= button_to "Edit", edit_article_path(article), method: :get, class: "btn btn-sm btn-primary " %>
	  <%= button_to "Delete", article_path(article.id), method: :delete, data: { confirm: "You sure?" } ,class: "btn btn-sm btn-primary " %>
	  <% end %>
    </li>
    
  <% end %>
</ul>
</div>




